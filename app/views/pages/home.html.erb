<div class="home-callout text-center container-fluid">
  <h2>Welcome to DevMatch</h2>
  <h3>A membership site where entrepreneurs can meet developers.</h3>
</div>
<div class="container home-signup-links">
  <div class="row">
    <%if user_signed_in? %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">My Profile</h2>
          <% if current_user.profile %>
            <%= link_to "Edit profile", "#", class: "btn btn-default btn-lg btn-block" %>
            <%= link_to "View profile", user_path(id: current_user.id), class: "btn btn-default btn-lg btn-block" %>
          <% else %>
            <%= link_to "Create profile", new_user_profile_path(user_id: current_user.id), class: "btn btn-default btn-lg btn-block" %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h3 class="text-center">The Community</h3>
          <p>Visit the community to meet developers, investors and entrepreneurs!</p>
          <%= link_to "Visit the community", "#", class: "btn btn-default btn-lg btn-block" %>
        </div>
      </div>
    <% else %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Basic Membership</h2>
          <h4 class="text-center">Get basic access to the DevMatch community for free.</h4>
          <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: "btn btn-primary btn-lg btn-block" %>
        </div>  <!--End of Well-->
      </div>  <!--End of Column-->
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Premium Membership</h2>
          <h4 class="text-center">Get premium access to the DevMatch community for $10/month.</h4>
          <%= link_to "Sign up with Premium", new_user_registration_path(plan: @premium_plan.id), class: "btn btn-success btn-lg btn-block" %>
        </div>  <!--End of Well-->
      </div>  <!--End of Column-->
    <% end %>
  </div>  <!--End of Row-->
</div>  <!--End of Container-->